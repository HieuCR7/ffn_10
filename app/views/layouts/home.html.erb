<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Football Website Template</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "home" %>
  <%= render "layouts/shim" %>
</head>
<body>
  <div class="background">
    <div class="page">
      <%= render "shared/home/header" %>
      <div class="body home">
        <div>
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
          <%= render "shared/home/slider" %>
          <%= yield %>
        </div>
        <%= render "shared/home/sidebar" %>
      </div>
      <%= render "shared/home/footer" %>
    </div>
  </div>
</body>
</html>
