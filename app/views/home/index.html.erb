<%= render "shared/home/slider" %>
<div class="col-md-12 schedule">
  <div class="row">
    <h5 class="schedule_day"><%= t ".schedule" %></h5>
  </div>
  <table border="1px">
    <tr class="table_menu">
      <th rowspan="2"><%= t ".status" %></th>
      <th rowspan="2"><%= t ".date_time" %></th>
      <th colspan="4"><%= t ".match" %></th>
      <th rowspan="2"><%= t ".bet" %></th>
      <th rowspan="2"><%= t ".match_info" %></th>
    </tr>
    <tr class="table_menu">
      <th class="team"><%= t ".team1" %></th>
      <th class="scored" colspan="2"><%= t ".score" %></th>
      <th class="team"><%= t ".team2" %></th>
    </tr>
    <%= render @leagues %>
  </table>
  <%= paginate @leagues %>
</div>
