<tr>
  <td><%= count_index_list team_counter %></td>
  <td><%= team.name %></td>
  <td>
    <%= l team.establish_year, format: :year if team.establish_year.present? %>
  </td>
  <td><%= team.continent_name %></td>
  <td><%= team.country_name %></td>
  <td><%= l team.created_at %></td>
  <td class="td-actions text-right">
    <%= link_to edit_admin_team_path(team), class: "btn btn-success btn-link btn-xs", title: t(".edit") do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to admin_team_path(team), class: "btn btn-danger btn-link btn-xs", title: t(".remove"),
      method: :delete, data: {confirm: t(".are_you_sure")} do %>
      <i class="fa fa-times"></i>
    <% end %>
  </td>
</tr>
