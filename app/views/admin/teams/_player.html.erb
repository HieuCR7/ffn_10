<tr>
  <td><%= player.name %></td>
  <td><%= l player.date_of_birth %></td>
  <td><%= player.gender&.titleize %></td>
  <td><%= player.weight %></td>
  <td><%= player.height %></td>
  <td><%= player.position&.titleize %></td>
  <td><%= player.number %></td>
  <td class="td-actions text-right">
    <%= link_to edit_admin_team_player_info_path(@team, player), class: "btn btn-success btn-link btn-xs", title: t(".edit") do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to admin_team_player_info_path(@team, player), class: "btn btn-danger btn-link btn-xs", title: t(".remove"),
      method: :delete, data: {confirm: t(".are_you_sure")} do %>
      <i class="fa fa-times"></i>
    <% end %>
  </td>
</tr>
