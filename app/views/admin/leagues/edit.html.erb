<% provide :title, t(".title") %>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title"><%= t ".title" %></h4>
      </div>
      <div class="card-body">
        <%= render partial: "form", locals: {url: admin_league_path(@league)} %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">
          <%= t ".team" %>
          <a class="btn btn-primary btn-xs right team_modal" href="<%= new_admin_league_team_path(@league) %>">
            <%= t ".add_new_team" %>
          </a>
        </h4>
      </div>
      <div class="card-body">
        <ul class="team">
          <%= render partial: "team", collection: @teams %>
        </ul>
        <%= paginate @teams, :param_name => "team_page" %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title"><%= t ".round" %></h4>
      </div>
      <div class="card-body">
        <ul class="team">
          <%= render partial: "round", collection: @rounds %>
        </ul>
        <%= paginate @rounds, :param_name => "round_page" %>
      </div>
    </div>
  </div>
</div>
