<div class="modal fade" id="new_round" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xs" role="document">
    <div class="modal-content">
      <%= form_for @round, url: admin_rounds_path, html: {id: "league_new_round"} do |f| %>
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><%= t ".title" %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row border-modal">
            <div class="form-group col-sm-12">
              <%= f.label t ".name", class: "control-label" %>
              <%= f.text_field :name, class: "form-control" %>
              <%= f.hidden_field :league_id, value: @league.id %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary"><%= t ".submit" %></button>
          <button type="button" class="btn btn-secondary right" data-dismiss="modal">
            <%= t ".close" %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
