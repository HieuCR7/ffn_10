<tr>
  <td><%= count_index_list credit_counter %></td>
  <td><%= credit.user_fullname %></td>
  <td><%= number_to_currency credit.amount %></td>
  <td>
    <%= credit.credit_type.titleize %>
    <% if credit.request? %>
      <%= link_to quick_set_type_admin_credit_path(credit), data: {method: "PATCH"} do %>
        <i class="fa fa-share" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </td>
  <td><%= l credit.created_at %></td>
  <td class="td-actions text-right">
    <%= link_to edit_admin_credit_path(credit), class: "btn btn-success btn-link btn-xs", title: t(".edit") do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to admin_credit_path(credit), class: "btn btn-danger btn-link btn-xs", title: t(".remove"),
      method: :delete, data: {confirm: t(".are_you_sure")} do %>
      <i class="fa fa-times"></i>
    <% end %>
  </td>
</tr>
