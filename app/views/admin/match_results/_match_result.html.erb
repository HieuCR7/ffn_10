<tr data-id="<%= match_result.id %>">
  <td><%= match_result.team_name %></td>
  <td>
    <span class="score_result"><%= match_result.score %></span>
    <input type="number" class="form-control input_match_result" min="<%= Settings.number_min %>" value="<%= match_result.score %>" />
  </td>
  <td>
    <div class="edit_result">
      <%= link_to "#", class: "btn btn-success btn-link btn-xs match_result_edit", title: t(".edit") do %>
        <i class="fa fa-edit"></i>
      <% end %>
      <%= link_to admin_match_result_path(match_result), class: "btn btn-danger btn-link btn-xs", title: t(".remove"),
        method: :delete, data: {confirm: t(".are_you_sure")} do %>
        <i class="fa fa-times"></i>
      <% end %>
    </div>
    <div class="update_result">
      <%= link_to "#", class: "btn btn-success btn-link btn-xs match_result_update", title: t(".update") do %>
        <i class="fa fa-refresh"></i>
      <% end %>
      <%= link_to "#", class: "match_result_reset", title: t(".reset") do %>
        <i class="fa fa-times"></i>
      <% end %>
    </div>
  </td>
</tr>
