<tr>
  <td><%= match_info.minutes %></td>
  <td><%= match_info.message %></td>
  <td><%= match_info.type_info.titleize %></td>
  <td><%= match_info.team_name %></td>
  <td><%= match_info.format_player %></td>
  <td><%= l match_info.created_at %></td>
  <td class="td-actions text-right">
    <%= link_to edit_admin_match_info_path(match_info), class: "btn btn-success btn-link btn-xs match_info_edit", title: t(".edit"), data: {id: match_info.id} do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to admin_match_info_path(match_info), class: "btn btn-danger btn-link btn-xs", title: t(".remove"),
      method: :delete, data: {confirm: t(".are_you_sure")} do %>
      <i class="fa fa-times"></i>
    <% end %>
  </td>
</tr>
