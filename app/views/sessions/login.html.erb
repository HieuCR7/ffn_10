<% provide :title, t(".title") %>
<h1 class="form-heading"><%= t ".title" %></h1>
<div class="login-form">
  <div class="main-div">
    <div class="panel">
      <h2><%= t ".login" %></h2>
    </div>
    <%= form_for :session, url: login_path do |f| %>
        <div class="form-group">
          <%= f.text_field :email, class: "form-control", id: "inputEmail", placeholder: t(".email") %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: t(".pass") %>
        </div>
        <div class="form-group">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span><%= t ".remember" %></span>
          <% end %>
        </div>
        <div class="forgot">
          <a href="reset.html"><%= t ".forgot_pass" %></a>
        </div>
        <%= f.submit t(".login"), class: "btn btn-primary" %>
    <% end %>
  </div>
  <p>
    New user? <%= link_to t(".signup_now"), signup_path, class: "botto-text" %>
  </p>
</div>
