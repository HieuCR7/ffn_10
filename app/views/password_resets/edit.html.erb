<% provide(:title, t(".title")) %>
<header class="heading"><%= t ".title" %></header><hr></hr>
<div class="row">
  <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
    <%= render "shared/error_messages" %>
    <%= hidden_field_tag :email, @user.email %>
    <div class="col-sm-12">
      <div class="row">
        <div class="col-xs-4">
          <%= f.label t(".pass"), class: "pass" %>
        </div>
        <div class="col-xs-8">
          <%= f.password_field :password, class: "form-control", id: "password", placeholder: t(".pass_place") %>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="row">
        <div class="col-xs-4">
          <%= f.label t(".confirm"), class: "pass" %>
        </div>
        <div class="col-xs-8">
          <%= f.password_field :password_confirmation, class: "form-control",
            id: "password", placeholder: t(".confirm_place") %>
        </div>
      </div>
    </div>
    <div class="col-sm-12" id="reset_pass">
      <%= f.submit t(".submit"), class: "btn btn-warning" %>
    </div>
  <% end %>
</div>
