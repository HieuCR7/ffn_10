<% provide :title, t(".login") %>
<div class="header row">
  <div class="col-md-2">
    <a href="index.html" id="logo">
      <%= image_tag("home/logo.png", :alt => t(".alt")) %>
    </a>
  </div>
  <div class="col-md-10">
    <ul>
      <li><%= link_to t(".home"), root_path %></li>
      <li><%= link_to t(".new"), football_news_index_path %></li>
      <li><%= link_to t(".team"), "#" %></li>
      <li><%= link_to t(".rank"), "#" %></li>
      <li><%= link_to t(".league"), "#" %></li>
      <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t ".account" %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".profile"), profile_path(current_user) %></li>
            <li><%= link_to t(".setting"), edit_profile_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t(".login"), login_path %></li>
        <li><%= link_to t(".signup"), signup_path %></li>
      <% end %>
    </ul>
  </div>
</div>
