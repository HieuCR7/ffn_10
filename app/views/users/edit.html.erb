<div class="container">
  <header class="heading"><%= t ".header" %></header><hr></hr>
  <div class="span3">
    <%= form_for @user, url: profile_path do |f| %>
    <%= render "shared/error_messages", class: "error_edit" %>
    <div class="row">
      <div class="col-md-4">
      <%= f.label t(".fullname"), class: "firstname" %>
      </div>
      <div class="col-md-8">
        <%= f.text_field :fullname, class: "form-control", id: "password", placeholder: t(".place__name") %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.label t(".email"), class: "firstname" %>
      </div>
      <div class="col-md-8">
        <%= f.email_field :email, class: "form-control", id: "password", placeholder: t(".place__email") %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.label t(".pass"), class: "firstname" %>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password, class: "form-control", id: "password", placeholder: t(".place_pass") %>
      </div>
    </div>
    <div class ="row">
      <div class="col-md-4">
      <%= f.label t(".gender"), class: "firstname" %>
      </div>
      <div class="col-md-4 male">
        <%= f.radio_button :gender, "male" %>
        <%= label_tag(:gender_male, t(".male")) %>
      </div>
      <div class="col-md-4 female">
        <%= f.radio_button :gender, "female" %>
        <%= label_tag(:gender_female, t(".female")) %>
      </div>
    </div>
    <div class="row">
      <%= f.submit t(".submit"), class: "btn btn-warning pull-right" %>
    </div>
    <% end %>
  </div>
</div>
